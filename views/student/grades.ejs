<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Grades</title>
</head>
<body>
    <h1>Student Grades</h1>

    <table>
        <thead>
            <tr>
                <th>Subject</th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            <!-- Loop through subjects and display their grades -->
            <% subjects.forEach(subject => { %>
                <tr>
                    <td><%= subject.name %></td>
                    <td><%= subject.grade || 'Not available' %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>

